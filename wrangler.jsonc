{
  "$schema": "https://json.schemastore.org/wrangler.json",
  "name": "diaryx-org",
  "compatibility_date": "2024-01-01",
  
  // Build configuration
  "build": {
    "command": "git clone https://github.com/diaryx-org/diaryx-site-template.git _template && cd _template && bun install && DIARYX_CONTENT_PATH=.. bun run build && mv dist ../"
  },
  
  // Static assets directory
  "assets": {
    "directory": "./dist"
  }
}
